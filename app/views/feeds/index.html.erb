<div class="container mt-4">
  <div class="row">
    <div class="col text-center">
      <h5>User</h5>
      <%= @user_count %>
    </div>

    <div class="col text-center">
      <h5>Post</h5>
      <%= @post_count %>
    </div>

    <div class="col text-center">
      <h5>Comment</h5>
      <%= @comment_count %>
    </div>
  </div>

  <hr>
  <br>
  <div class="row text-center">
    <div class="col">
      <h4>Chatterbox</h4>
      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Comments</th>
          </tr>
        </thead>
        <tbody>
          <% count = 1 %>
          <% @users.each do |user| %>
            <tr>
              <th scope="row"><%= count.to_s + "." %></th>
              <td><%= user.name %></td>
              <td><%= user.comments_count %></td>
            </tr>
            <% count += 1 %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col">
      <h4>Most Popular Post</h4>
      <table class="table text-center">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Created At</th>
          </tr>
        </thead>
        <tbody>
          <% count = 1 %>
          <% @posts.each do |post| %>
            <tr>
              <th scope="row"><%= count.to_s + "." %></th>
              <td><%= post.title %></td>
              <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
            </tr>
            <% count += 1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
