<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col-md-auto">Title</th>
      <th scope="col">Status</th>
      <th scope="col">Created at</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <th class="text-capitalize"><%= post.status %></th>
        <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= render partial: "shared/post_button", locals: {post: post} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
