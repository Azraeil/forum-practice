<% if current_user == post.user %>
  <%= link_to edit_post_path(post.id), class: "btn btn-info btn-sm mb-1" do %>
    <%= fa_icon "edit" %>
  <% end %>
<% end %>

<% if current_user.role == "Admin" || current_user == post.user %>
  <%= link_to post_path(post.id), method: :delete, data: {disable_with: "waiting.."}, class: "btn btn-danger btn-sm mb-1" do %>
    <%= fa_icon "trash" %>
  <% end %>
<% end %>
