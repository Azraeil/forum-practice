<% if current_user == comment.user %>
  <%= link_to edit_post_comment_path(@post.id, comment.id), class: "btn btn-info btn-sm" do %>
    <%= fa_icon "edit" %>
  <% end %>
<% end %>

<% if current_user.role == "Admin" || current_user == comment.user %>
  <%= link_to post_comment_path(@post.id, comment.id), method: :delete, data: {disable_with: "waiting.."}, class: "btn btn-danger btn-sm" do %>
    <%= fa_icon "trash" %>
  <% end %>
<% end %>
