<!-- 文章分類按鈕 -->
<ul class="nav nav-pills">
  <li class="nav-item">
    <%= link_to "All", root_path, class:"btn btn-light  nav-link #{ 'active' if current_page?(root_path)}" %>
  </li>
  <% @categories.each do |category| %>
  <li class="nav-item">
    <%= link_to category.name, category_path(category.id), class:"btn btn-light nav-link #{ 'active' if current_page?(category_path(category.id)) }" %>
  </li>
  <% end %>
</ul>

<br>

<!-- 文章列表 -->
<table class="table table-dark table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Replies count</th>
      <th scope="col">Title</th>
      <th scope="col">Last replied at</th>
      <th scope="col">Viewed count</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <!-- <th scope="row">1</th> -->
        <th>#Replies_count</th>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <td><%= post.comments.last.created_at.strftime("%Y-%m-%d") %></td>
        <td>#viewed_count</td>
      </tr>
    <% end %>
  </tbody>
</table>
