<% if current_user.is_collected?(@post) %>
  <%= link_to "Uncollect", uncollect_post_path(@post.id), method: :delete, class: "btn btn-outline-info", id: "uncollect-#{@post.id}", remote: true %>
<% else %>
  <%= link_to "Collect", collect_post_path(@post.id), method: :post, class: "btn btn-outline-primary", id: "collect-#{@post.id}", remote: true %>
<% end %>
