<!-- 作者的資料與文章內容 -->
<div class="row border mb-1">
  <div class="col-sm-2">
    <!-- user.avatar, user.name, add_friend button -->
    <div class="text-center">
      <%= link_to user_path(post_object.user.id) do %>
        <%= filestack_image post_object.user.avatar, transform: filestack_transform.resize(width:85, height:85), class:"mt-2" if post_object.user.avatar %>

        <div>
          <%= post_object.user.name %>
        </div>
      <% end %>

      <% @user = post_object.user %>
      <%= render partial: "shared/friendship_button" %>
    </div>

  </div>

  <div class="col-sm-10">
    <br>
    <%= filestack_image(post_object.file, transform: filestack_transform.resize(width:400, height:300), class:"border d-flex justify-content-center") if (post_object.file != "" && post_object.file != nil) %>
    <br>
    <%= post_object.content %>

    <div class="clearfix"></div>
    <div class="float-right">
      <%= render partial: "shared/post_button", locals: {post: post_object} %>
    </div>
  </div>
</div>
