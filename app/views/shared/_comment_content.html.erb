<div class="row border mb-1">
  <div class="col-sm-2">
    <!-- user.avatar, user.name, add_friend button -->
    <%= link_to user_path(comment.user.id) do %>
      <div class="text-center">
        <%= filestack_image comment.user.avatar, transform: filestack_transform.resize(width:100, height:100), class:"mt-2" if comment.user.avatar %>
        <div>
          <%= comment.user.name %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-sm-10">
    <%= comment.content %>

    <div class="clearfix"></div>
    <div class="float-right">
      <%= render partial: "shared/comment_button", locals: {comment: comment} %>
    </div>
  </div>
</div>
