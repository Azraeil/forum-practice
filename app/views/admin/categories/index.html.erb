<div class="container">
  <div class="link">
    <%= link_to "Category List", admin_categories_path, class:" btn btn-link" %>
    <%= link_to "User List", admin_users_path, class:" btn btn-link" %>
  </div>
  <h2>Category List</h2>
  <hr>
  <table class="table table-dark table-striped table-hover">
    <thead>
      <tr>
        <th scope="col-9">Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <th scope="row"><%= category.name %></th>
          <td>
            <%= link_to "Edit", edit_admin_category_path(category.id), class: "btn btn-primary" %>
            <%= link_to "Delete", admin_category_path(category.id), method: :delete, class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
