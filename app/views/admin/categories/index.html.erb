<div class="container">
  <div class="link">
    <%= link_to "Category List", admin_categories_path, class:" btn btn-link" %>
    <%= link_to "User List", admin_users_path, class:" btn btn-link" %>
  </div>
  <h2>Category List</h2>

  <div class="form-inline">
    <%= form_for [:admin, @category] do |f| %>
    <span class="form-group">
      <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
    </span>
    <%= f.submit class: "btn btn-info" %>
    <% if @category.errors.any? %>
      <%= @category.errors.full_messages.to_sentence %>
    <% end %>
  <% end %>
</div>

<hr>
<table class="table table-dark table-striped table-hover">
  <thead>
    <tr>
      <th scope="col-9">Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <th scope="row"><%= category.name %></th>
        <td>
          <!-- 因爲要在首頁編輯，所以路徑不是 edit_path，並額外傳入 ID 參數 -->
          <%= link_to "Edit", admin_categories_path(id: category.id), class: "btn btn-primary" %>
          <%= link_to "Delete", admin_category_path(category.id), method: :delete, class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
