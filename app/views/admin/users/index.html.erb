<div class="container">
  <div class="link">
    <%= render partial: "admin/shared/admin_nav_tabs" %>
  </div>
  <hr>
  <table class="table table-dark table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col-md-auto">Email</th>
        <th scope="col">Role</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th><%= user.name %></th>
          <td><%= user.email %></td>
          <td>
            <%= form_tag admin_user_path(user.id), method: :patch, class: "form-inline" do %>
              <%= select_tag :role, options_for_select([["Admin", "Admin"], ["Normal", "Normal"]], user.role), class: "form-control" %>
              <%= submit_tag "Update", class: "btn btn-info" %>

            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
