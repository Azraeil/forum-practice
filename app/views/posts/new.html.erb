<div class="container">
  <h2>Create Post</h2>
  <%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.filestack_field :file, 'File', pickerOptions: { accept: 'file/*', fromSources: ['local_file_system', 'url'], maxFiles: 1, maxSize: 10240000 }, class: "btn btn-info" %>
  </div>

  <div class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">
        Who Can See
      </legend>
      <div class="col-sm-10">
        <div class="form-check form-check-inline">
          <!-- http://api.rubyonrails.org/v5.1/classes/ActionView/Helpers/FormHelper.html#method-i-radio_button -->
          <%# radio_button(object_name, method, tag_value, options = {}) %>
          <%= radio_button :post, :who_can_see, "all", { checked: true , class: "form-check-input" } %>
          
          <%# label_tag(name = nil, content_or_options = nil, options = nil, &block) %>
          <%= label_tag :post_who_can_see_all, "All", class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
          <%= radio_button :post, :who_can_see, "friend", {  class: "form-check-input" } %>
          <%= label_tag :post_who_can_see_friend, "Friend", class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
          <%= radio_button :post, :who_can_see, "myself", {  class: "form-check-input" } %>
          <%= label_tag :post_who_can_see_myself, "Myself", class: "form-check-label" %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">
        Category
      </legend>
      <div class="col-sm-10">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="categoryRadios" id="categroyRadios1" value="" checked="checked">
          <label class="form-check-label" for="categroyRadios1">
            Category1#dev
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    Status :
    <br>
    <%= link_to "Save Draft#", root_path, class: "btn btn-primary" %>

    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
