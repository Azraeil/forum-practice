<div class="container">
  <h2>Create Post</h2>
  <%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.filestack_field :file, 'File', pickerOptions: { accept: 'file/*', fromSources: ['local_file_system', 'url'], maxFiles: 1, maxSize: 10240000 }, class: "btn btn-info" %>
  </div>

  <div class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">
        Who Can See
      </legend>
      <div class="col-sm-10">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="all" checked>
          <label class="form-check-label" for="gridRadios1">
            All
          </label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="friend">
          <label class="form-check-label" for="gridRadios2">
            Friend
          </label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="myself" disabled>
          <label class="form-check-label" for="gridRadios3">
            Myself
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">Radios</legend>
      <div class="col-sm-10">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="categoryRadios" id="categroyRadios1" value="" checked>
          <label class="form-check-label" for="categroyRadios1">
            Category1
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="">
      Status :
      <br>
      <%= link_to "Save Draft#", root_path, class: "btn btn-primary" %>

      <%= link_to "Submit#", root_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
</div>
